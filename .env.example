# Bybit Derivatives (USDT Perp) - Testnet
EXCHANGE=bybit
MARKET_TYPE=swap
TESTNET=true

# Símbolo fallback (si SYMBOLS está vacío)
SYMBOL=BTC/USDT:USDT

# Multi-símbolo (coma-separado). Relevantes por defecto:
# Ajusta esta lista según tu preferencia y límites de rate-limit de Bybit testnet.
SYMBOLS=BTC/USDT:USDT,ETH/USDT:USDT,SOL/USDT:USDT,XRP/USDT:USDT,BNB/USDT:USDT,ADA/USDT:USDT,DOGE/USDT:USDT,LINK/USDT:USDT,TON/USDT:USDT,LTC/USDT:USDT

# Timeframe
TIMEFRAME=1m

# Strategy params (simple SMA crossover)
FAST_SMA=9
SLOW_SMA=20

# Derivatives
LEVERAGE=5
POSITION_MODE=oneway   # oneway | hedge
MARGIN_MODE=isolated   # isolated | cross

# Risk management (notional por trade, en USDT; se multiplica por el leverage para calcular qty)
MAX_NOTIONAL_USDT=50
TP_PCT=0.003     # 0.3%
SL_PCT=0.002     # 0.2%

# Telegram (opcional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Heartbeat y loop
HEARTBEAT_MINUTES=30
POLL_INTERVAL_SECONDS=10

# API keys (usa unificadas o las específicas Bybit)
API_KEY=
API_SECRET=
BYBIT_API_KEY=
BYBIT_API_SECRET=